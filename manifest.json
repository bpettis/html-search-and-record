{
  "manifest_version": 2,
"name": "Chrome Extension Practice",
"description": "Testing Creating a Plugin",
"version": "1.0",
"content_scripts":[
    {
      "matches":[
        "http://benpettis.com/*",
        "https://benpettis.com/*"
      ],
      "js": ["content.js"]
    }
  ],
"browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
"background": {
      "scripts": ["background.js"],
      "persistent": false
    },
"permissions": [
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/"
  ]
}